package basic.rest.postcall;

import io.restassured.RestAssured;
import io.restassured.http.ContentType;

import static io.restassured.RestAssured.*;
import static org.hamcrest.CoreMatchers.equalTo;

import org.testng.annotations.Test;

public class createrepository {
	
	@Test
	public void createBroad() {
		RestAssured.baseURI = "https://api.github.com";
		String bearerToken = "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";
		
		System.out.println("Staring Test Case - Create Repo");

		given()
			   .header("Authorization", "Bearer " + bearerToken).
		body("{"+
				"\"name\": \"API-Testing-Automation\""
				+"}").
		when()
				.post("/user/repos").
		then().assertThat().statusCode(201).and().
				contentType(ContentType.JSON).and();
	}

}
